<div class="container">
  <% @posts.each_slice(3) do |set_of_posts| %>
    <div class="row top-buffer">
      <% set_of_posts.each do |post| %>
        <div class="col-md-4">
          <div class="card text-center">
            <div class="card-img-container">
              <img class="card-img-top" src="/images/blog/<%= post['image_path'] %>" alt="post image">
            </div>
            
            <div class="card-body">
              <h5 class="card-title"><%= post['title'] %></h5>
              <p class="card-text"><%= post['subtitle'] %></p>
              <p class="card-text">Posted on: <%= post_date(post['created_at']) %><%= %></p>
              <a href="<%= "/blog/#{post['path']}" %>" class="btn btn-lg btn-primary">Read More</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>